 <%= link_to 'New transaction', new_transaction_path %>

<h1>Transactions:</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Sender</th>
    <th>Recipient</th>
    <th>Amount (EUR)</th>
  </tr>

  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.id %></td>
      <td><%= link_to transaction.sender_id, account_path(transaction.sender_id) %></td>
      <td><%= link_to transaction.recipient_id, account_path(transaction.recipient_id) %></td>
      <td><%= transaction.amount %></td>
      <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    </tr>
  <% end %>
</table>
